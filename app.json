{
  "expo": {
    "name": "fastRide",
    "slug": "fastride",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "fastride",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "googleServicesFile": "./ios/fastRide/GoogleService-Info.plist",
      "bundleIdentifier": "com.nishantapp.fastRide",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show addresses on the map."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.nishantapp.fastRide",
      "googleServicesFile": "android/app/google-services.json",
      "permissions": ["ACCESS_FINE_LOCATION"],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCLVlmceJF7PXpWwsmc9OUKDLTNlAGVXms"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/auth",
      "@react-native-firebase/app",
      "@react-native-google-signin/google-signin",
      "@react-native-firebase/crashlytics",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsDownloadToken": "sk.eyJ1Ijoic3VtYW4wMDA5IiwiYSI6ImNtYzR6NjRoczBoZHIyaXNhZXR3N29neG8ifQ.Gby7uQba230r8t7Jymaexg",
          "RNMapboxMapsVersion": "11.1.0"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Show current location on map"
        }
      ],
      [
      "expo-maps",
      {
        "requestLocationPermission": true,
        "locationPermission": "Allow $(PRODUCT_NAME) to use your location",
        "googleMapsApiKey": "AIzaSyCLVlmceJF7PXpWwsmc9OUKDLTNlAGVXms"
      }
      ]

    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "7b142d98-4171-4a61-ad6a-f927ba19b956"
      }
    },
    "owner": "nishexpo"
  }
}
